generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MasterAccount {
  id              String   @id @default(cuid())
  user_id         String
  email           String   @unique
  by_bit_uid      String   @unique
  by_bit_api_key  String
  by_bit_api_secret String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([user_id])
}

model FollowerAccount {
  id              String   @id @default(cuid())
  user_id         String
  email           String   @unique
  by_bit_uid      String   @unique
  by_bit_api_key  String
  by_bit_api_secret String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([user_id])
}